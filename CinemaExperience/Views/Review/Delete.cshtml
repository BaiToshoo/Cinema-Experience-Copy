@model ReviewDeleteViewModel

@{
	ViewData["Title"] = "Delete Review";
}


<div class="container">
    <h1 class="text-center">Delete Review</h1>
    <div class="row justify-content-center">
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6 text-center">
            <h4>@Model.UserName, Are you shure you want to delete this review</h4>
            <p>PostedOn on: @Model.PostedOn</p>
            <p>Content: @Model.Content</p>
            <p>Rating: @Model.Rating</p>
            <p>For Movie: @Model.MovieTitle</p>
            <form asp-controller="Review" asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="MovieId" />
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                <a asp-controller="Review" asp-action="All" asp-route-id="@Model.MovieId" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>