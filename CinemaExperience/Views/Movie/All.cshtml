@using Microsoft.AspNetCore.Identity
@model IEnumerable<AllMoviesViewModel>
@using Microsoft.AspNetCore.Http;

@inject UserManager<ApplicationUser> userManager;
@inject IHttpContextAccessor _context;

@{
	ViewBag.Title = "All Movies";
    var user = await userManager.GetUserAsync(_context.HttpContext.User);
}

<h2>All Movies</h2>

<div class="container">
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="bd-placeholder-img card-img-top" width="100%" src="@movie.ImageUrl" alt="@movie.Title">
                    <div class="card-body">
                        <p class="card-text">@movie.Title</p>
                        <p class="card-text"><small class="text-muted">@movie.Director</small></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="btn btn-sm btn-outline-secondary">Details</a>
                                @if (user.IsAdmin == true)
                                {
                                    <a href="@Url.Action("Edit", "Movie", new { id = movie.Id })" class="btn btn-sm btn-outline-secondary">Edit</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}