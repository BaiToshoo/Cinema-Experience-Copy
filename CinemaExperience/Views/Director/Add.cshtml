@model DirectorViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit"><bold>Name</bold></label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Biography" class="form-label-add-edit"><bold>Biography</bold></label>
                <textarea asp-for="@Model.Biography" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Biography" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.BirthDate" class="form-label-add-edit"><bold>Birth Date</bold></label>
                <input asp-for="@Model.BirthDate" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit"><bold>Image (Path to photo)</bold></label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true"/>
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}