@model ReviewViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="MovieId" value="@Model.MovieId" />
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="mb-3">
                <label asp-for="@Model.Content" class="form-label-add-edit"><bold>Content</bold></label>
                <textarea asp-for="@Model.Content" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Rating" class="form-label-add-edit"><bold>Rating (1-10)</bold></label>
                <select asp-for="@Model.Rating" class="form-control" aria-required="true">
                    <option disabled selected value="">Rate...</option>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @{
                    var id = Model.MovieId;
                }
                <a asp-controller="Review" asp-action="All" asp-route-id="@id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to all reviews</a>
                <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>